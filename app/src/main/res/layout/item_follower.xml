<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_follower"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Circle"
        tools:src="@drawable/arale_profile" />

    <TextView
        android:id="@+id/tv_follower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_follower"
        app:layout_constraintStart_toStartOf="@+id/iv_follower"
        app:layout_constraintTop_toBottomOf="@+id/iv_follower"
        tools:text="@string/follower_name" />

    <TextView
        android:id="@+id/tv_follower_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_follower_name"
        app:layout_constraintStart_toStartOf="@+id/tv_follower_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_follower_name"
        tools:text="@string/follower_email" />

</androidx.constraintlayout.widget.ConstraintLayout>